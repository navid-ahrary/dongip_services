{
  "name": "dongip_services",
  "version": "0.6.0",
  "description": "personal accounting and split money between friends",
  "keywords": [
    "loopback-application",
    "loopback"
  ],
  "main": "index.js",
  "engines": {
    "node": ">=10.16.3"
  },
  "scripts": {
    "build": "lb-tsc",
    "build:watch": "lb-tsc --watch",
    "clean": "lb-clean dist *.tsbuildinfo",
    "lint": "yarn run prettier:check && yarn run eslint",
    "lint:fix": "yarn run eslint:fix && yarn run prettier:fix",
    "prettier:cli": "lb-prettier \"**/*.ts\" \"**/*.js\"",
    "prettier:check": "yarn run prettier:cli -- -l",
    "prettier:fix": "yarn run prettier:cli -- --write",
    "eslint": "lb-eslint --report-unused-disable-directives .",
    "eslint:fix": "yarn run eslint -- --fix",
    "pretest": "yarn run clean && yarn run build",
    "test": "lb-mocha --allow-console-logs \"dist/__tests__\"",
    "posttest": "yarn run lint",
    "test:dev": "lb-mocha --allow-console-logs dist/__tests__/**/*.js && yarn run posttest",
    "docker:build": "docker build -t dongpi_service .",
    "docker :run": "docker run -p 8080:8080 -d dongpi_services",
    "migrate": "node ./dist/migrate",
    "prestart": "yarn run build",
    "start": "node -r source-map-support/register .",
    "deploy": "pm2 start ecosystem.config.js --env production",
    "stop": "pm2 stop ecosystem.config.js --env production",
    "prepublishOnly": "yarn run test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://gitlab.com/navid_ahrary/dongip_services.git"
  },
  "author": "navidarry",
  "license": "ISC",
  "files": [
    "README.md",
    "index.js",
    "index.d.ts",
    "dist",
    "src",
    "!*/__tests__"
  ],
  "dependencies": {
    "@loopback/authentication": "^3.3.1",
    "@loopback/boot": "^1.7.2",
    "@loopback/cli": "^1.29.0",
    "@loopback/context": "^2.0.0",
    "@loopback/core": "^1.12.2",
    "@loopback/openapi-v3": "^1.12.0",
    "@loopback/repository": "^1.18.0",
    "@loopback/rest": "^1.26.0",
    "@loopback/rest-explorer": "^1.4.8",
    "@loopback/service-proxy": "^1.3.15",
    "@types/underscore": "^1.9.4",
    "@types/uuid": "^3.4.5",
    "awesome-phonenumber": "^2.21.0",
    "bcryptjs": "^2.4.3",
    "debug": "^4.1.1",
    "dotenv": "^8.2.0",
    "firebase-admin": "^8.8.0",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.15",
    "loopback-connector": "^4.5.0",
    "loopback-connector-arangodb": "https://gitlab.com/navid_ahrary/loopback-connector-arangodb.git",
    "moment": "^2.24.0",
    "pm2": "^4.2.1"
  },
  "devDependencies": {
    "@loopback/build": "^3.1.0",
    "@loopback/eslint-config": "^5.0.2",
    "@loopback/testlab": "^1.10.2",
    "@types/bcryptjs": "^2.4.2",
    "@types/jsonwebtoken": "^8.3.5",
    "@types/lodash": "^4.14.146",
    "@types/node": "^10.17.13",
    "@typescript-eslint/eslint-plugin": "^2.18.0",
    "@typescript-eslint/parser": "^2.18.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.9.0",
    "eslint-plugin-eslint-plugin": "^2.2.1",
    "eslint-plugin-mocha": "^6.2.2",
    "source-map-support": "^0.5.16",
    "typescript": "~3.7.5"
  }
}
